<p id="notice"><%= notice %></p>

<h1><%= t ".feedback" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t ".author" %></th>
      <th><%= t ".message" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.author %></td>
        <td><%= feedback.message %></td>
        <td><%= link_to t('.show'), feedback %></td>
        <td><%= link_to t('.edit'), edit_feedback_path(feedback) %></td>
        <td><%= link_to t('.destroy'), feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.newfeedback'), new_feedback_path %>
